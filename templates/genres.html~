{% extends "base.html" %}
<html>
<head>
<meta http-equiv="content-type" content="text/html; charset=utf-8">
<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery\
/1.8.2/jquery.min.js"></script>
<script type="text/javascript">
  var $SCRIPT_ROOT = {{ request.script_root|tojson|safe }};
</script>
</head>
  {% block bodycontent %}
  <h1> {{ genre }} </h1>
  
  {% for song in songs %}
  
  {{ song[0] }} by  {{ song[1] }} Views: {{ song[5] }}   
<script type="text/javascript">
  $(function() {
    $("#submitBtn").click(function() {
         $.ajax({
            type: "GET",
            url: $SCRIPT_ROOT + "/echo/",
            contentType: "application/json; charset=utf-8",
            data: { views: $('div[name="{{song[title]}}views"]').html() },
            success: function(data) {
                $('#views').text(data.value);
            }
        });
    });
  });
</script>
<button type="button" id="submitBtn"  name="submitBtn">Like</button><br><br>
<strong>Views:<div name="{{song[title]}}views" id="views">{{song[6]}}</div></strong>


  {% endfor %}

  {% endblock bodycontent %}
